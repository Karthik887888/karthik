apiVersion: v1
kind: Service
metadata:
  name: wisecow-service
spec:
  selector:
    app: wisecow
  ports:
    - protocol: TCP
      port: 80        # Expose on port 80 for external access
      targetPort: 5000 # Internally map to app's port 5000
  type: LoadBalancer  # Expose this service to the internet
